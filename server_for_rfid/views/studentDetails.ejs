<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student</title>
    <%- include('./partials/navCss') %>
    <style>
        main{
            width: 80%;
            min-height: 100vh;
            margin-left: 20%;
            background-color: antiquewhite;
        }
        .display-students{
            padding: 1rem;
            display: grid;
            grid-template-columns: auto auto auto auto;
            gap: 1rem;
        }
        .student{
            border: .3rem solid aquamarine;
            border-radius: .3rem;
            padding: .5rem 1rem;
        }
    </style>
</head>
<body>
    <%- include('./partials/nav') %>
    <main>
        <% if (students.length > 0) { %>
         <div class="display-students">
                <% students.forEach(function(student) { %>
                    <div class="student">
                        <div class="name"> Name : <%- student.name %> </div>
                        <div class="roll-no"> Roll-NO :  <%- student.rollno %> </div>
                    </div>
                <% }); %>
        </div>
        <% } else {%>
            <div class="display-students">
                No students found
            </div>
        <% } %>
    </main>
</body>
</html>